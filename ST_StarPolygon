DROP FUNCTION IF EXISTS ST_StarPolygon(
  	geom GEOMETRY,
	outerRadius float,
	innerRadius float,
	numberSides integer,
	k integer)

CREATE OR REPLACE FUNCTION ST_StarPolygon(
 	geom GEOMETRY,
	outerRadius float,
	innerRadius float,
	numberSides integer,
	k integer)
RETURNS GEOMETRY AS
$BODY$
WITH
    tbla AS (SELECT ST_StarPolygonContour($1, $2, $3, $4, $5) geom)
            SELECT ST_LinesToPolygons(geom) geom FROM tbla
$BODY$
LANGUAGE SQL

SELECT ST_StarPolygon(geom, 0.001, 0.01, 360, 5) geom FROM <points_table_4326>

important: experimental function, it is necessary to follow the orientation of the figures!
